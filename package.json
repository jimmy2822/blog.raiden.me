{
  "name": "hexo-site",
  "version": "0.0.0",
  "private": true,
  "hexo": {
    "version": "7.3.0"
  },
  "scripts": {
    "build": "hexo generate",
    "clean": "hexo clean",
    "deploy": "hexo deploy",
    "dev": "hexo server",
    "start": "hexo server",
    "generate": "hexo generate",
    "server": "hexo server --draft",
    "new": "hexo new",
    "publish": "hexo publish",
    "version": "hexo version",
    "list": "hexo list",
    "test": "npm run clean && npm run build:safe",
    "predev": "npm run clean",
    "predeploy": "npm run test",
    "build:safe": "npm run clean && hexo generate --bail",
    "dev:safe": "npm run clean && hexo server --debug",
    "test:core": "hexo version && hexo list info",
    "validate": "node -e \"console.log('Package.json valid:', !!require('./package.json'))\"",
    "deps:check": "npm list --depth=0",
    "security:check": "npm audit --audit-level moderate",
    "build:debug": "npm run clean && hexo generate --debug",
    "dev:draft": "hexo server --draft",
    "test:quick": "npm run validate && npm run deps:check",
    "test:build": "npm run clean && npm run build:debug",
    "validate:config": "hexo version && hexo list info",
    "deps:outdated": "npm outdated",
    "security:fix": "npm audit fix",
    "workflow:check": "node .kiro/specs/npm-issues-fix/development-workflow-fix.js --check",
    "workflow:test": "node .kiro/specs/npm-issues-fix/development-workflow-test.js"
  },
  "dependencies": {
    "ajv": "^5.5.2",
    "hexo": "^7.3.0",
    "hexo-autoprefixer": "^2.0.0",
    "hexo-deployer-git": "^4.0.0",
    "hexo-excerpt": "^1.1.4",
    "hexo-generator-archive": "^2.0.0",
    "hexo-generator-category": "^2.0.0",
    "hexo-generator-feed": "^3.0.0",
    "hexo-generator-index": "^4.0.0",
    "hexo-generator-sitemap": "^3.0.1",
    "hexo-generator-tag": "^2.0.0",
    "hexo-lazyload-image": "^1.0.4",
    "hexo-renderer-ejs": "^2.0.0",
    "hexo-renderer-marked": "^7.0.1",
    "hexo-renderer-sass": "^0.5.0",
    "hexo-renderer-stylus": "^3.0.1",
    "hexo-renderer-swig": "^1.1.0",
    "hexo-server": "^3.0.0",
    "jquery": "^3.4.1",
    "lunr": "^2.3.9",
    "moment": "^2.24.0",
    "object-assign": "^4.1.1",
    "sass": "^1.77.8"
  }
}
